<!-- Grid è un container flessibile -->
<Grid>
	<Grid.ColumnDefinitions>
		<ColumnDefinitions Width="2*" /> 
		<ColumnDefinitions Width="1*" />
		<ColumnDefinitions Width="1*" />
	<Grid.ColumnDefinitions/>
	<Grid.RowDefinitions>
		<RowDefinitions Height="2*" /> 
		<RowDefinitions Height="1*" />
		<RowDefinitions Height="1*" />
	<Grid.RowDefinitions/>
	<Button>Button 1</Button>
    <Button Grid.Column="1">Button 2</Button>    
	<Button Grid.Column="2">Button 3</Button>		
	<Button Grid.Row="1">Button 4</Button>			
	<Button Grid.Column="1">Button 5</Button>				
	<Button Grid.Column="2">Button 6</Button>					
	<Button Grid.Row="2">Button 7</Button>						
	<Button Grid.Column="1" Grid.Row="2">Button 8</Button>						
	<Button Grid.Column="2" Grid.Row="2">Button 9</Button>						
</Grid>

<!-- 
	Lo star => 1* è lo standard di misura con le grid
	Esempio:
	Width="1*", divide lo spazio in modo percentuale
	Width="auto",
	Width="230";
-->

<Grid>
	<Grid.ColumnDefinitions>
		<ColumnDefinitions Width="231"/> 
		<ColumnDefinitions Width="230"/>
		<ColumnDefinitions Width="231"/>
	<Grid.ColumnDefinitions/>
	<Grid.RowDefinitions>
		<RowDefinitions Height="106"/> 
		<RowDefinitions Height="106"/>
		<RowDefinitions Height="107"/>
	<Grid.RowDefinitions/>
</Grid>

